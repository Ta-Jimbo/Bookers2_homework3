<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'user_info', user: @user=current_user %>
      <%= render 'books/new', book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>

      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <th><a href="users/<%= user.id %>"><%= image_tag user.get_profile_image(100, 100) %></a></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user.id) %></th>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>



