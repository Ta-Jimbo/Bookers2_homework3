<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user_info', user: @book.user %>
      <%= render 'new', book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">

      <h3>Book detail</h3>

      <table>
        <tbody>
          <tr>
            <th><a href="/users/<%= @book.user_id %>"><%= image_tag @book.user.get_profile_image(100, 100) %></a></br>
              <%= link_to @book.user.name, user_path(@book.user.id) %>
            </th>
            <th><%= link_to @book.title, book_path(@book.id) %></a></th>
            <th><%= @book.body %></th>
            <th>
              <% if @book.user==current_user %>
                <a class="btn btn-sm btn-success" href="/books/<%= @book.id %>/edit">Edit</a>
                <a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger" rel="nofollow" data-method="delete" href="/books/<%= @book.id %>">Destroy</a>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>




